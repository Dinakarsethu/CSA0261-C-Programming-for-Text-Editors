#include <stdio.h>

int main() {
    int amount, notes;

    printf("Enter the amount: ");
    scanf("%d", &amount);

    // counting Rs. 500 notes
    notes = amount / 500;
    printf("Rs. 500 notes: %d\n", notes);
    amount = amount % 500;

    // counting Rs. 100 notes
    notes = amount / 100;
    printf("Rs. 100 notes: %d\n", notes);
    amount = amount % 100;

    // counting Rs. 50 notes
    notes = amount / 50;
    printf("Rs. 50 notes: %d\n", notes);
    amount = amount % 50;

    // counting Rs. 20 notes
    notes = amount / 20;
    printf("Rs. 20 notes: %d\n", notes);
    amount = amount % 20;

    // counting Rs. 10 notes
    notes = amount / 10;
    printf("Rs. 10 notes: %d\n", notes);
    amount = amount % 10;

    // counting Rs. 5 notes
    notes = amount / 5;
    printf("Rs. 5 notes: %d\n", notes);
    amount = amount % 5;

    // counting Rs. 2 notes
    notes = amount / 2;
    printf("Rs. 2 notes: %d\n", notes);
    amount = amount % 2;

    // counting Rs. 1 notes
    notes = amount / 1;
    printf("Rs. 1 notes: %d\n", notes);

    return 0;
}
